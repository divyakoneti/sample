<h2 align="center"> Total Posts </h2>
<div class="container" >

<% @posts.each do |post| %>
  <b> Title</b><p><%= post.title %></p>
  <div class="well">
  <b> Description</b><p><%= post.description %></p>
  </div>
  <p> <%= link_to "DELETE" ,category_post_path(@category,post.id),method: :delete,data: {confirm: "delete" } ,class: "btn btn-info"%>
      </p>
  <p><%= link_to "SHOW" ,category_post_path(@category,post.id) ,class: "btn btn-info"%></p> 
  <p><%= link_to "Edit" ,edit_category_post_path(@category,post.id),class: "btn btn-info" %></p>   
  <hr>
<% end %>
